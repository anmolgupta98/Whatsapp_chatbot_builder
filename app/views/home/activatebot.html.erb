				<div class="col-2 text-center">
					<svg height="20" width="300">
					  <line x1="0" y1="15" x2="150" y2="15" style="stroke:rgb(0,0,0);stroke-width:1" />
					</svg>
				</div>
				<div class="col-1 text-center">
					<%= link_to image_tag('radioon.png', size: "15", class: "rounded-circle"), activatebot_path(@id), class: "custom_link"%>
				</div>
				<div class="col-2">
				</div>
			</div>
		</div>
		<div class="col-1">
		</div>	
	</div>

	<!-- main content -->
	<div class="row mt-4">
		<div class="col-1">
		</div>

		<div class="col-10 rowheight_three border bg-white">
			<%= render 'home/edit/activatebot_main'%>
		</div>

		<div class="col-1">
		</div>
	</div>
</div>