<% define_id = "define_nodes_id_" + child.id.to_s %>
<% connector_green_link_define_id = "connector_green_link_define_id_" + child.id.to_s%>
<div class="row mb-2" id= <%= define_id%> >
	<div class="connector_black_link"></div>
	<div class="usermessage_white_box">
		<div class="row">
			<div class="col-1 text-center mt-2 ml-2">
				<%= image_tag('greenflash.JPG', size: "14", class: "rounded-circle")%>
			</div>
			<div class="col-4 mt-2", style="padding-right: 5px;">
				Define node
			</div>
			<div class="col-6 mt-2 ml-2", style="padding-left: 5px;">
				<%= form_with scope: :define_node, url: define_nodes_path(child.id), method: :get, remote: true do |f| %>
			    <span class=" text-right ml-5">
				  	<%= link_to image_tag('dustbin.png', size: "10"), usermessage_node_delete_path(child.id, "define"), method: :delete, remote: true, data: { confirm: "Are you sure that you want to delete this node? This will delete all the children nodes attached to it. You can edit the current node, if you wanted to."}%>
				</span>
				<span class="text-center ml-3">
					<%= f.submit "Define", value: "Define", class: "usermessage_add_button", remote: true%>
				</span>
			  	<% end %>
			</div>
		</div>
	</div>
	<div class="connector_green_circle "></div>
	<div class="connector_green_link", id="<%= connector_green_link_define_id %>"></div>
</div>
