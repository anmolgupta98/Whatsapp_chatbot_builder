<% if notice %>
	<div class='alert alert-success ml-2' style="width: 130px; height: 27px; font-size: 10px; padding: 2px; margin: 0;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" >&times;</span>
        </button>
		<%= notice %>
	</div>
<% end %>

<% if alert %>
	<div class='alert alert-danger ml-2' style="width: 130px; height: 27px; font-size: 10px; padding: 2px; margin: 0;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" >&times;</span>
        </button>
		<%= alert %>
	</div>
<% end %>