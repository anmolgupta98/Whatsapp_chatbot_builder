<% expanded_define_id = "expanded_define_nodes_id_" + @id.to_s %>
<% compressed_define_id = "compressed_define_nodes_id_" + @id.to_s %>
<% connector_black_link_vertical = "connector_black_link_vertical_" + (@node.id).to_s%>
<% usermessage_adding_trigger_phrases_id = "usermessage_adding_trigger_phrases_id_" + (@child.id).to_s%>

document.getElementById('<%= expanded_define_id%>').classList.remove('hide');
document.getElementById('<%= compressed_define_id%>').classList.add('hide');

height = document.getElementById('<%= connector_black_link_vertical %>').style.height;
height = parseInt(height);
height = height + 297;

<%if @child.user_input_type != 'text'%>
	height = height - 167;
	document.getElementById('<%= usermessage_adding_trigger_phrases_id%>').classList.add('hide');
<%end%>

document.getElementById('<%= connector_black_link_vertical %>').style.height =  height + "px";

